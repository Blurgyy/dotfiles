{
    "coc.source.around.firstMatch": false,
    "coc.source.buffer.firstMatch": false,
    "diagnostic.virtualText": true,
    "languageserver": {
        "golang": {
            "command": "~/go/bin/gopls",
            "rootPatterns": [
                "go.mod",
                ".git/",
                ".vim/"
            ],
            "filetypes": ["go"]
        },
        "cpp": {
            "command": "clangd",
            "args": [
                "-j=3",
                "--background-index=true",
                "--compile-commands-dir=build",
                "--header-insertion=never"
            ],
            "rootPatterns": [
                "build/",
                ".git/"
            ],
            "filetypes": [
                "c",
                "cpp",
                "cc",
                "c++",
                "objc",
                "objcpp"
            ]
        }
    }
}
