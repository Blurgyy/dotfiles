{
    "languageserver": {
        "golang": {
            "command": "~/go/bin/gopls",
            "rootPatterns": [
                "go.mod",
                ".git/",
                ".vim/"
            ],
            "filetypes": ["go"]
        },
        "cpp": {
            "command": "clangd",
            "args": [
                "--background-index",
                "--compile-commands-dir=build",
                "--header-insertion=never"
            ],
            "rootPatterns": [
                "build/",
                ".git/"
            ],
            "filetypes": [
                "c",
                "cpp",
                "cc",
                "c++",
                "objc",
                "objcpp"
            ]
        }
    }
}
