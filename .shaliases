# Typo-proof
_clear_typo=(
    claer
    clare
    clera
    clrae
    clrea
)
_git_typo=(
    gi
    gi
    it
)
_cd_typo=(
    c
    ccd
)
_ls_typo=(
    lll
    lls
    sl
)
_nvim_typo=(
    bim
    im
    ivm
    v
    vikm
    vimk
    vimm
    vivm
    vkim
    vkm
    vkmm
    vm
    vmi
    vmk
    vom
)
for _typo in ${_clear_typo[@]}; do eval "alias $_typo='clear'"; done
for _typo in ${_git_typo[@]}; do eval "alias $_typo='git'"; done
for _typo in ${_cd_typo[@]}; do eval "alias $_typo='cd'"; done
for _typo in ${_ls_typo[@]}; do eval "alias $_typo='ls'"; done
for _typo in ${_nvim_typo[@]}; do eval "alias $_typo='nvim'"; done
unset _typo _clear_typo _git_typo _cd_typo _ls_typo _nvim_typo

alias rm='rm -v'
alias mv='mv -v'
alias cp='cp -v'
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

alias exa='exa -F'
alias ls='exa --color=automatic'
alias ll='exa -alhg --git --color=automatic'
alias la='exa -a --color=automatic'
alias l='exa --color=automatic'
alias tree='exa -T --color=automatic'
# When in trouble with `ls` command, install `exa` via package manager or
# build from source (https://github.com/ogham/exa).  Or use below aliases to
# substitute above aliases.
# alias ls='ls --color=tty'
# alias ll='ll --alhF'
# alias la='ls -A'
# alias l='ls -CF'

alias cat='bat'

# Shorthand
alias duh='du -h --max-depth'
alias g='git'
alias ga='git add'
alias gc='git commit -sv'
alias gca='git commit -sv --amend'
alias gcan='git commit -sv --amend --no-edit'
alias gd='git diff'
alias gdc='git diff --cached'
alias gf='git fetch'
alias gll='git pull'
alias gp='git push'
alias hibernate='systemctl hibernate'
alias j='journalctl --user'
alias open='xdg-open'
alias p='python3 -u'
alias sj='sudo journalctl'
alias sus='systemctl --user'
alias sys='sudo systemctl --system'
alias ts='telegram-send'
alias vi='nvim'
alias vim='nvim'
alias wget.k='wget --no-check-certificate'

# View mode, open neovim with 'modifiable' disabled and 'read-only' enabled
alias view='nvim -RM'

# Do not use system exit/logout, use function `k()` defined in ~/.shtmux
if [[ -f ~/.shtmux ]]; then
    alias exit='k'
    alias logout='k'
fi

# termbin.com
alias tb='nc termbin.com 9999 -N'

# Use longer timeout for telegram-send
alias telegram-send='telegram-send --timeout 3600.0'

# Pass aliases to sudo
alias sudo='sudo '

# Get colored output from pacman
alias pacman='pacman --color=auto'

# proxy environment
alias px='env http_proxy=http://127.0.0.1:9990 https_proxy=http://127.0.0.1:9990 npm_config_proxy=http://127.0.0.1:9990'

# Export compile_commands.json to build directory by default
# see commit 03bcd601cf3aa14a7f869b0e147d1b854e09075a
alias cmake='cmake -DCMAKE_EXPORT_COMPILE_COMMANDS=1'

